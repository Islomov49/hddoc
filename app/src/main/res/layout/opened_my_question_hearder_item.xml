<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/togone"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivContentImage"
                android:adjustViewBounds="true"

                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                />

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:indeterminate="false"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/twenty_dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.isoma.homiladavridoctor.utils.LinkerTextView
                    android:id="@+id/tvBodyQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#262626"
                    android:textSize="@dimen/sixteen_dp"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView
                    android:id="@+id/tvDateQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:text="24.06.2016"
                    android:textColor="#e2e2e2" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/twelve_dp">
                <TextView
                    android:id="@+id/tvCountYurak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="@dimen/fourteen_dp"
                    android:text="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yurak"
                    android:textSize="@dimen/twelve_dp"
                    android:gravity="center"
                    android:textColor="#bdbdbd" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/twelve_dp">
                <TextView
                    android:id="@+id/tvCountQiziqishlar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="@dimen/fourteen_dp"
                    android:text="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qiziqish"
                    android:textSize="@dimen/twelve_dp"
                    android:gravity="center"
                    android:textColor="#bdbdbd" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/twelve_dp">
                <TextView
                    android:id="@+id/tvCountKorilgan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="@dimen/fourteen_dp"
                    android:text="0"/>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/looked"
                    android:textColor="#bdbdbd"
                    android:textSize="@dimen/twelve_dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/twelve_dp">
                <TextView
                    android:id="@+id/tvCountAnswerlar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#262626"
                    android:textSize="@dimen/fourteen_dp"
                    android:text="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/javoblar"
                    android:textSize="@dimen/twelve_dp"
                    android:gravity="center"
                    android:textColor="#bdbdbd" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ImageView
                    android:id="@+id/ivTrash"
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/two_dp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/trash"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f5f5f5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e1f5fe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/five_dp"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp"
                android:paddingTop="@dimen/five_dp"
                android:text="@string/javoblar"
                android:textColor="#262626"
                android:textSize="@dimen/sixteen_dp" />

            <FrameLayout
                android:id="@+id/loadAnswers"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/sixteen_dp"></FrameLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f5f5f5"
            />

    </LinearLayout>

</LinearLayout>