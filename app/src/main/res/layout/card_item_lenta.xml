<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
        <FrameLayout
            android:id="@+id/ifFirst"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_5dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:layout_marginLeft="@dimen/four_dp"
            android:layout_marginRight="@dimen/four_dp"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_marginTop="@dimen/one_dp"
            card:cardMaxElevation="@dimen/ten_dp"

            card:cardElevation="@dimen/five_dp"
            card:cardCornerRadius="@dimen/eight_dp"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/toInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/togone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred_fifty_dp">
                    <com.isoma.homiladavridoctor.utils.CircleProgressBar
                        android:id="@+id/loading"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center"
                        card:progress_complete_color="#bcbcbc"
                        card:progress_fill_color="#fafafa"
                        card:progress_text_color="#818181"
                        card:progress_maxprogress="100"
                        card:progress_progress="0"
                        card:progress_text_visibility="invisible"
                        card:progress_uncomplete_color="#e9e9e9"
                        />
                </FrameLayout>

            <ImageView
                    android:id="@+id/photostat"
                android:adjustViewBounds="true"

                android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    />

                <TextView
                    android:id="@+id/bodyst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:textSize="@dimen/fourteen_dp"
                    android:text=""
                    android:textColor="#212121"
                    android:paddingLeft="@dimen/twelve_dp"
                    android:paddingRight="@dimen/twelve_dp"
                    android:layout_marginBottom="@dimen/pad_5dp"
                    android:paddingTop="@dimen/pad_5dp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ten_dp"
                    android:src="@drawable/elsebut"
                    android:padding="@dimen/three_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comentik"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_dp"
                    android:src="@drawable/linee"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/authphoto"
                        android:src="@drawable/avatar"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/forty_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginLeft="@dimen/twelve_dp"
                        />
                    <TextView
                        android:id="@+id/authname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/twelve_dp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_marginTop="@dimen/six_dp"
                        android:textColor="#1379a7"
                        android:layout_toRightOf="@+id/authphoto"
                        android:layout_toEndOf="@+id/authphoto"
                        android:layout_alignTop="@+id/authphoto" />
                    <TextView
                        android:id="@+id/creatat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ten_dp"
                        android:textColor="#878787"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_toRightOf="@+id/authphoto"
                        android:layout_toEndOf="@+id/authphoto"

                        android:layout_alignBottom="@+id/authphoto"
                        android:layout_marginBottom="@dimen/six_dp"/>
                    <ImageView
                        android:id="@+id/emptyheart"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/emptyheart"
                        android:paddingTop="@dimen/fifteen_dp"
                        android:paddingBottom="@dimen/fifteen_dp"
                        android:paddingRight="@dimen/sixteen_dp"
                        android:scaleType="centerInside"
                        />

                    <TextView
                        android:id="@+id/hearts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/fourteen_dp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_toLeftOf="@+id/emptyheart"
                        android:layout_toStartOf="@+id/emptyheart"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true" />
                    <ImageView
                        android:id="@+id/coommentariya"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/commentariya"
                        android:paddingTop="@dimen/fifteen_dp"
                        android:paddingBottom="@dimen/fifteen_dp"
                        android:paddingRight="@dimen/sixteen_dp"
                        android:scaleType="centerInside"
                        android:layout_toStartOf="@+id/hearts"
                        android:layout_toLeftOf="@+id/hearts" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/fourteen_dp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_toLeftOf="@+id/coommentariya"
                        android:layout_toStartOf="@+id/coommentariya"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>
