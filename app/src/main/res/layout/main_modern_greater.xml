<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clickable="true"
    tools:context=".HomilaDavri">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_barik"
            />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/forgone"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/three_hundred_dp"
                        android:background="?attr/colorPrimary"

                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/three_hundred_dp"

                        android:src="@drawable/zalivka"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/three_hundred_dp"
                        android:src="@drawable/nur_orqa"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hundred_seventy_dp"
                        android:src="@drawable/backgraunddik"
                        android:scaleType="fitStart"
                        android:id="@+id/cliu"
                        android:layout_marginLeft="-20dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginTop="0dp"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hundred_fifty_dp"
                        android:src="@drawable/cloud_moddern"
                        android:layout_marginRight="@dimen/twenty_dp"
                        android:layout_marginLeft="@dimen/twenty_dp"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:id="@+id/imageView9" />

                    <RelativeLayout
                        android:layout_width="@dimen/two_hundred_fifty_dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/sixty_seven_dp">

                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/eight_dp"
                        android:src="@drawable/answq"
                        android:id="@+id/gochat"
                        android:paddingBottom="@dimen/three_dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <ImageView
                        android:layout_width="@dimen/thirty_two_dp"
                        android:layout_height="match_parent"
                        android:id="@+id/gotest"
                        android:paddingRight="@dimen/three_dp"
                        android:src="@drawable/tests"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/seventeen_dp"/>
                        <TextView
                            android:visibility="gone"
                            android:layout_width="@dimen/twenty_dp"
                            android:layout_height="@dimen/twenty_dp"
                            android:id="@+id/newlenta"
                            android:textSize="@dimen/ten_dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:text="4"
                            android:layout_marginLeft="@dimen/thirty_three_dp"
                            android:layout_marginTop="@dimen/six_dp"

                            android:background="@drawable/tocka_new"/>
                        <TextView
                            android:visibility="gone"
                            android:layout_width="@dimen/twenty_dp"
                            android:layout_height="@dimen/twenty_dp"
                            android:id="@+id/newmessage"
                            android:textSize="@dimen/ten_dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:text="9+"
                           android:layout_marginRight="@dimen/two_dp"
                            android:layout_marginTop="@dimen/six_dp"
                            android:background="@drawable/tocka_new"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hundred_fifty_dp"
                        android:src="@drawable/zaliv_cloud"
                        android:layout_marginTop="@dimen/two_hundred_twenty_dp"
                        android:id="@+id/ortaa"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/ned_usish"
                        android:layout_width="@dimen/hundred_sixty_one_dp"
                        android:layout_height="@dimen/hundred_forty_eight"
                        android:scaleType="fitEnd"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:src="@drawable/week24"
                        android:layout_centerHorizontal="true"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/thirty_dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/hundred_eighty_dp">
                        <TextView
                            android:layout_width="@dimen/sixty_dp"
                            android:layout_height="match_parent"

                            android:text="КОЛДИ:\n26 ҲАФТА"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/qol_hafta"
                            android:textSize="@dimen/ten_dp"
                            />
                        <TextView
                            android:layout_width="@dimen/sixty_dp"
                            android:layout_height="match_parent"
                            android:text="ЎТДИ:\n14  ҲАФТА"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:id="@+id/utdi_hafta"
                            android:textSize="@dimen/ten_dp"
                            />
                        <TextView
                            android:layout_width="@dimen/sixty_dp"
                            android:layout_height="match_parent"

                            android:text="ОҒИРЛИГИ:\n400 ГР"
                            android:textColor="#fff"
                            android:textSize="@dimen/ten_dp"
                            android:gravity="center"
                            android:id="@+id/ogirligi"
                            />
                        <TextView
                            android:layout_width="@dimen/sixty_dp"
                            android:layout_height="match_parent"

                            android:text="УЛЧАМИ:\n30 СМ"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="@dimen/ten_dp"
                            android:id="@+id/razmer"

                            />
                    </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/three_hundred_dp"
                            android:paddingTop="@dimen/pad_10dp"
                            android:id="@+id/pasdasd">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/twenty_five_dp"
                                android:src="@drawable/prog"
                                android:layout_below="@+id/juchok"
                                android:layout_marginLeft="@dimen/sixteen_dp"
                                android:layout_marginRight="@dimen/sixteen_dp" >
                                <ImageView
                                    android:layout_width="@dimen/fifteen_dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pasleft"
                                    android:scaleType="fitXY"
                                    android:id="@+id/imageView222" />
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pascentr"
                                    android:layout_marginRight="@dimen/fifteen_dp"
                                    android:layout_toLeftOf="@+id/imageView200"
                                    android:layout_toRightOf="@+id/imageView222"
                                    android:layout_toEndOf="@+id/imageView222"
                                    android:scaleType="fitXY"/>
                                <ImageView
                                    android:layout_width="@dimen/fifteen_dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/pasright"
                                    android:scaleType="fitXY"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/imageView200" />
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/twenty_five_dp"
                                android:layout_below="@+id/juchok"
                                android:layout_marginLeft="@dimen/sixteen_dp"
                                android:layout_marginRight="@dimen/sixteen_dp"
                                android:orientation="horizontal"
                                android:id="@+id/linearLayout">
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="14"
                                    android:background="@drawable/main_loder"
                                    android:id="@+id/green_frame"

                                    />
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="26"

                                    android:id="@+id/grey_frame"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/twenty_five_dp"
                                android:src="@drawable/prog"

                                android:layout_below="@+id/juchok"
                                android:layout_marginLeft="@dimen/sixteen_dp"
                                android:layout_marginRight="@dimen/sixteen_dp" >
                            <ImageView
                                android:layout_width="@dimen/fifteen_dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/leftprog"
                                android:scaleType="fitXY"
                                android:id="@+id/imageView22" />
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/sentrporfg"
                                    android:scaleType="fitXY"
                                    android:layout_marginRight="@dimen/fifteen_dp"
                                    android:layout_toLeftOf="@+id/imageView20"
                                    android:layout_toRightOf="@+id/imageView22"
                                    android:layout_toEndOf="@+id/imageView22" />
                                <ImageView
                                    android:layout_width="@dimen/fifteen_dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/rightside"
                                    android:scaleType="fitXY"
                                    android:id="@+id/imageView20"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true" />
                                   </RelativeLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:text=""
                                android:textSize="@dimen/twelve_dp"
                                android:layout_marginBottom="@dimen/five_dp"
                                android:id="@+id/juchok"
                                android:textColor="?attr/colorAccent"

                                android:layout_alignLeft="@+id/linearLayout"
                                android:layout_alignStart="@+id/linearLayout" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/sixteen_dp"
                                android:text=""
                                android:textSize="@dimen/twelve_dp"
                                android:layout_marginBottom="@dimen/five_dp"
                                android:id="@+id/xafta"
                                android:textColor="?attr/colorAccent"

                                android:layout_alignRight="@+id/linearLayout"
                                android:layout_alignEnd="@+id/linearLayout" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/linearLayout"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/five_dp"
                                android:layout_marginTop="@dimen/ten_dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:scaleType="fitXY"
                                    android:alpha="0.5"
                                    android:src="@drawable/linee"
                                    android:id="@+id/linya"
                                    />
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="@dimen/five_dp"
                                   >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:id="@+id/toliqhaftagaa">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/textView9"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/sixteen_dp"
                                                android:layout_marginTop="@dimen/seven_dp"
                                                android:text="@string/this_week"
                                                android:textColor="?attr/colorAccent"
                                                android:textSize="@dimen/twelve_dp" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/umum1"
                                                android:layout_marginLeft="@dimen/sixteen_dp"
                                                android:maxLines="3"
                                                android:ellipsize="end"
                                                android:textSize="@dimen/twelve_dp"
                                                android:textColor="#303030"
                                                android:layout_marginTop="@dimen/five_dp"

                                                />

                                        </LinearLayout>


                                        <ImageView
                                            android:layout_width="@dimen/fourteen_dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/leftt"
                                            android:layout_marginLeft="@dimen/five_dp"
                                            android:padding="@dimen/three_dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentEnd="true"
                                            android:id="@+id/imageView17"
                                            android:scaleType="centerInside"
                                            android:layout_alignTop="@+id/textView9"
                                            android:layout_alignBottom="@+id/umum1"
                                            android:layout_marginRight="@dimen/sixteen_dp"/>
                                    </LinearLayout>
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/five_dp"
                                        android:layout_alignBottom="@+id/toliqhaftagaa"
                                        android:background="@drawable/white_gradient"/>


                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:scaleType="fitXY"
                                    android:alpha="0.5"
                                    android:src="@drawable/linee"
                                    android:id="@+id/linyaaa"
                                    android:layout_marginTop="@dimen/five_dp"

                                    />
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="@dimen/five_dp"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:id="@+id/maqola">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:orientation="vertical"
                                            android:layout_height="wrap_content">
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/seven_dp"
                                                android:layout_marginLeft="@dimen/sixteen_dp"

                                                android:orientation="horizontal">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/homiladorlae_olami"
                                                    android:textColor="?attr/colorAccent"
                                                    android:layout_below="@+id/linyaaa"
                                                    android:textSize="@dimen/twelve_dp"
                                                    android:id="@+id/textView91" />
                                                <TextView
                                                    android:visibility="gone"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:text="BETA"
                                                    android:textSize="@dimen/eight_dp"
                                                    android:gravity="center"
                                                    android:textColor="#fff"
                                                    android:layout_marginTop="@dimen/two_dp"
                                                    android:layout_marginBottom="@dimen/two_dp"
                                                    android:background="@drawable/newmesindicblue"
                                                    android:paddingLeft="@dimen/five_dp"
                                                    android:paddingRight="@dimen/five_dp"
                                                    android:layout_marginLeft="@dimen/ten_dp"/>
                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/umum23"
                                                android:text="@string/homiladorlar_olami_discrib"
                                                android:layout_marginLeft="@dimen/sixteen_dp"
                                                android:layout_below="@+id/textView91"
                                                android:textSize="@dimen/twelve_dp"
                                                android:maxLines="3"
                                                android:ellipsize="end"
                                                android:layout_alignParentBottom="true"
                                                android:textColor="#303030"
                                                android:layout_marginTop="@dimen/five_dp"
                                                android:layout_toLeftOf="@+id/imageView18"
                                                android:layout_toStartOf="@+id/imageView18" />

                                        </LinearLayout>



                                        <ImageView
                                            android:layout_width="@dimen/fourteen_dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/leftt"
                                            android:layout_marginLeft="@dimen/five_dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentEnd="true"
                                            android:id="@+id/imageView18"
                                            android:padding="@dimen/three_dp"
                                            android:scaleType="centerInside"
                                            android:layout_alignTop="@+id/textView91"
                                            android:layout_alignBottom="@+id/umum23"
                                            android:layout_marginRight="@dimen/sixteen_dp"/>

                                    </LinearLayout>
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/five_dp"
                                        android:layout_below="@+id/maqola"
                                        android:background="@drawable/white_gradient"
                                        />

                                </RelativeLayout>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:scaleType="fitXY"
                                    android:alpha="0.5"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:src="@drawable/linee"
                                    />
                            </LinearLayout>


                             </RelativeLayout>

                </RelativeLayout>

        </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawerik"
        android:background="@color/white"
        />
</android.support.v4.widget.DrawerLayout>

