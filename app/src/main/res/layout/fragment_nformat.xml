<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#fff"
      >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/photoStatiya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"

                android:scaleType="centerCrop"/>

           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/authphoto"
                android:src="@drawable/avatar"
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/twelve_dp"
                />
            <TextView
                android:id="@+id/authname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColorLink="?attr/colorPrimaryLink"
                android:textSize="@dimen/twelve_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/six_dp"
                android:textColor="#bebebe"
                android:layout_toRightOf="@+id/authphoto"
                android:layout_toEndOf="@+id/authphoto"
                android:layout_alignTop="@+id/authphoto" />
            <TextView
                android:id="@+id/creatat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ten_dp"
                android:textColor="#878787"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_toRightOf="@+id/authphoto"
                android:layout_toEndOf="@+id/authphoto"
                android:text="02.01.2016 йил"
                android:layout_alignBottom="@+id/authphoto"
                android:layout_marginBottom="@dimen/six_dp"/>
            <ImageView
                android:id="@+id/emptyheart"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/emptyheart"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingRight="16dp"
                android:scaleType="centerInside"
                />

            <TextView
                android:id="@+id/hearts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_toLeftOf="@+id/emptyheart"
                android:layout_toStartOf="@+id/emptyheart"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/linee"
                android:scaleType="fitXY"/>
            <TextView

                android:id="@+id/themest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="@dimen/twelve_dp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/twelve_dp"
                android:paddingRight="@dimen/twelve_dp"
                android:textColor="#292929"

                />
            <TextView
                android:id="@+id/bodyst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14sp"
                android:textColor="#292929"
                android:paddingLeft="@dimen/twelve_dp"
                android:paddingRight="@dimen/twelve_dp"
                android:paddingTop="@dimen/pad_5dp"
                android:autoLink="all"
                android:layout_marginBottom="16dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/linee"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:id="@+id/tcomment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sixty_dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Мулоҳаза"
                     android:textColor="#878787"
                     android:textSize="@dimen/sixteen_dp"
                     android:layout_marginLeft="@dimen/twelve_dp"
                     android:layout_centerVertical="true"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/coommentariya"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/commentariya"
                    android:paddingTop="@dimen/fifteen_dp"
                    android:paddingBottom="@dimen/fifteen_dp"
                    android:paddingRight="@dimen/sixteen_dp"
                    android:scaleType="centerInside"
                    />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/sixteen_dp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_toLeftOf="@+id/coommentariya"
                    android:layout_toStartOf="@+id/coommentariya"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:src="@drawable/linee"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
