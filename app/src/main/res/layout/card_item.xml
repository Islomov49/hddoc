<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/ifFirst"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_5dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginLeft="@dimen/four_dp"
        android:layout_marginRight="@dimen/four_dp"
        android:layout_marginBottom="@dimen/eight_dp"
        android:layout_marginTop="@dimen/one_dp"
        card:cardMaxElevation="@dimen/ten_dp"

        card:cardElevation="@dimen/five_dp"
        card:cardCornerRadius="@dimen/eight_dp"
        android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/toInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/togone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/photostat"
                        android:adjustViewBounds="true"

                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="@dimen/sixteen_dp"
                        android:layout_marginBottom="@dimen/sixteen_dp"
                        />

                    <ProgressBar
                        android:id="@+id/loading"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:indeterminate="false"
                        android:layout_gravity="center"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:background="@drawable/circle_shape"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="0" />
                </FrameLayout>


                <TextView
                    android:id="@+id/themest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/sixteen_dp"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/twelve_dp"
                    android:paddingRight="@dimen/twelve_dp"
                    android:textColor="#292929"

                    />
                <TextView
                    android:id="@+id/bodyst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textSize="@dimen/txt_14sp"
                    android:text=""
                    android:textColor="#292929"
                    android:paddingLeft="@dimen/twelve_dp"
                    android:paddingRight="@dimen/twelve_dp"
                    android:paddingTop="@dimen/pad_5dp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_dp"
                    android:src="@drawable/elsebut"
                    android:paddingTop="@dimen/eleven_dp"
                    android:paddingBottom="@dimen/twelve_dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#efeeee"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sixty_dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/authphoto"
                        android:src="@drawable/avatar"
                        android:layout_width="@dimen/forty_dp"
                        android:layout_height="@dimen/forty_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginLeft="@dimen/twelve_dp"
                        />
                    <TextView
                        android:id="@+id/authname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/twelve_dp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_marginTop="@dimen/six_dp"
                        android:textColor="#1379a7"
                        android:layout_toRightOf="@+id/authphoto"
                        android:layout_toEndOf="@+id/authphoto"
                        android:layout_alignTop="@+id/authphoto" />
                    <TextView
                        android:id="@+id/creatat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ten_dp"
                        android:textColor="#878787"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_toRightOf="@+id/authphoto"
                        android:layout_toEndOf="@+id/authphoto"

                        android:layout_alignBottom="@+id/authphoto"
                        android:layout_marginBottom="@dimen/six_dp"/>
                    <ImageView
                        android:id="@+id/emptyheart"
                        android:layout_width="@dimen/sixty_dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/emptyheart"
                        android:paddingTop="@dimen/fifteen_dp"
                        android:paddingBottom="@dimen/fifteen_dp"
                        android:paddingRight="@dimen/sixteen_dp"
                        android:scaleType="centerInside"
                        />

                    <TextView
                        android:id="@+id/hearts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/sixteen_dp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_toLeftOf="@+id/emptyheart"
                        android:layout_toStartOf="@+id/emptyheart"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>
