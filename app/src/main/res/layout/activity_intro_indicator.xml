<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_intro_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.isoma.homiladavridoctor.intropage.IntroIndicator"
                android:background="#fff">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/sixty_dp"
        >
    </android.support.v4.view.ViewPager>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/forty_dp"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/five_dp">
       <FrameLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"/>
       <com.isoma.homiladavridoctor.intropage.PageCircleIndicator
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="@dimen/forty_dp"
           android:id="@+id/indicator"
           android:background="#fff"/>
       <ImageView
           android:id="@+id/ivToNextButton"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="@dimen/forty_dp"
            android:paddingBottom="@dimen/twenty_dp"
           android:src="@drawable/right_arrow"/>
   </LinearLayout>


</RelativeLayout>
