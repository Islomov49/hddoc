        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="@dimen/fourteen_dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:orientation="vertical">
        <com.isoma.homiladavridoctor.utils.LinkerTextView
            android:id="@+id/tvBodyMessagee"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:textSize="@dimen/fourteen_dp"
            android:text=""/>
        <TextView
            android:id="@+id/tvDateQuestionn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:textSize="@dimen/twelve_dp"
