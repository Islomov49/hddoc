<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.isoma.homiladavridoctor.fragments.SettingsFragment"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred_eighty_dp"
                android:id="@+id/fonrrr"
                android:src="?attr/colorPrimary"
                            android:scaleType="centerCrop"
               />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/eight_dp"
                android:id="@+id/liniya"
                android:layout_below="@id/fonrrr"
                android:background="?attr/colorPrimaryLight"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/hundred_twenty_dp"
                android:src="@drawable/avatar"
                android:layout_height="@dimen/hundred_twenty_dp"
                app:border_color="@color/white"
                app:border_width="@dimen/three_dp"

                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/twenty_four_dp"

                android:layout_above="@+id/username"
                android:layout_alignParentTop="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/put_name"
                android:id="@+id/ismi"
                android:textSize="@dimen/eighteen_dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_alignTop="@+id/profile_image"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30 yosh"
                android:id="@+id/yosi"
                android:layout_below="@+id/ismi"
                android:textSize="16sp"
                android:textColor="@color/whfio"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="0dp"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birinchi homila"
                android:id="@+id/homilasi"
                android:layout_below="@+id/yosi"
                android:textSize="@dimen/fourteen_dp"
                android:textColor="@color/whfio"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xomilani 14 xaftasida"
                android:id="@+id/xaftasi"
                android:layout_below="@+id/homilasi"
                android:textSize="@dimen/fourteen_dp"
                android:textColor="@color/whfio"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="0dp"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tugush kuni: 01.03.2015"
                android:id="@+id/tugusi"
                android:layout_below="@+id/xaftasi"
                android:textSize="@dimen/fourteen_dp"
                android:textColor="@color/whfio"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="0dp"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/ten_dp"
                android:text="@string/fio"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="28dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView2"
                android:layout_below="@+id/liniya"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"/>

            <FrameLayout
                android:id="@+id/flFIO"
                android:layout_below="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/ten_dp"
                        android:id="@+id/ismfamila"
                        android:textSize="@dimen/fourteen_dp"
                        android:textColor="@color/glavniy_text"
                        android:gravity="left"
                        android:background="@drawable/emp"
                        android:hint="@string/fio_hint" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flFIO"
                android:text="@string/ageset"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView3" />
            <FrameLayout
                android:id="@+id/flAge"
                android:layout_below="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten_dp"
                    android:id="@+id/yosingiz"
                    android:inputType="number"
                    android:textSize="@dimen/fourteen_dp"
                    android:gravity="left"
                    android:background="@drawable/emp"
                    android:hint="@string/age_hint"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flAge"
                android:text="@string/doctor_phone"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView4" />
            <FrameLayout
                android:id="@+id/flDoctor"
                android:layout_below="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Doctor"
                    android:textSize="@dimen/fourteen_dp"
                    android:gravity="left"
                    android:inputType="phone"
                    android:background="@drawable/emp"
                    android:padding="@dimen/ten_dp"
                    android:hint="@string/doctor_phone_hint"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flDoctor"
                android:text="@string/doctor_name"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView5" />
            <FrameLayout
                android:id="@+id/flDoctorName"
                android:layout_below="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vracismi"
                    android:background="@drawable/emp"
                    android:padding="@dimen/ten_dp"
                    android:textSize="@dimen/fourteen_dp"
                    android:gravity="left"
                    android:hint="@string/fio_hint" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flDoctorName"
                android:text="@string/poliklinika"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView6" />
            <FrameLayout
                android:id="@+id/flPoliklinika"
                android:layout_below="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/poliklinika"
                    android:textSize="@dimen/fourteen_dp"
                    android:gravity="left"
                    android:background="@drawable/emp"
                    android:padding="@dimen/ten_dp"
                    android:inputType="number"
                    android:hint="@string/poliklinika_hint"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flPoliklinika"
                android:text="@string/blood_type"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView7" />

            <FrameLayout
                android:id="@+id/flBloodType"
                android:layout_below="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/qongruh"
                    android:background="@drawable/emp"
                    android:padding="@dimen/ten_dp"
                    android:textSize="@dimen/fourteen_dp"
                    android:gravity="left"
                    android:hint="@string/blood_type_hint"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flBloodType"
                android:text="@string/address"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView8" />
            <FrameLayout
                android:id="@+id/flAddress"
                android:layout_below="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/manzil"
                    android:textSize="@dimen/fourteen_dp"
                    android:background="@drawable/emp"
                    android:padding="@dimen/ten_dp"
                    android:gravity="left"
                    android:hint="@string/address_hint"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flAddress"
                android:text="@string/father_name"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView9" />
            <FrameLayout
                android:id="@+id/flFatherName"
                android:layout_below="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eri"
                    android:textSize="@dimen/fourteen_dp"
                    android:background="@drawable/emp"
                    android:padding="@dimen/ten_dp"
                    android:gravity="left"
                    android:inputType="text"
                    android:hint="@string/fio_hint"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:layout_below="@+id/flFatherName"
                android:text="@string/father_phone"
                android:textSize="@dimen/eighteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:textColor="?attr/colorAccent"
                android:id="@+id/textView10" />
            <FrameLayout
                android:id="@+id/flFatherPhone"
                android:layout_below="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text_color_pr">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_text_color_pr_strike"
                    android:tint="?attr/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/erinom"
                    android:textSize="@dimen/fourteen_dp"
                    android:background="@drawable/emp"
                    android:padding="@dimen/ten_dp"
                    android:gravity="left"
                    android:inputType="phone"
                    android:hint="@string/doctor_phone_hint"/>
            </FrameLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:layout_below="@+id/flFatherPhone"
                android:textSize="@dimen/twenty_dp"
                android:text="@string/save"
                android:id="@+id/eslabbb"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:background="?attr/colorPrimary"
                android:textColor="#fff"
                />
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
